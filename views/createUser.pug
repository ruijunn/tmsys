html
  head 
    title="Task Management System"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet")
  body 
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System"
      h2="Create New User"
      if error
        p(class="alert alert-danger")=error

      form(class="row g-3" method="post")
        div(class="form-group")
          input(type="text" class="form-control" name="username" placeholder="Username")
         
        div(class="form-group")
          input( type="password" class="form-control" name="password" placeholder="Password" 
          pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,10}")
          
        div(class="form-group")
          input( type="email" class="form-control" name="email" placeholder="Email")

        span="Password must"
        li Have 8 characters and maximum 10 characters
        li Have alphabets, numbers, special characters

        div(class="form-group")
          button(type="submit" class="btn btn-primary mb-3")="Create"