html
  head 
    title="Task Management System"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet")
  body 
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System"
      h2="Change Password"
      if error 
        p(class="alert alert-danger")=error
        
      form(class="row g-3" method="post")
        div(class="form-group")
          input(type="password" class="form-control" name="currentpwd" placeholder="Current Password")
        
        div(class="form-group")
          input( type="password" class="form-control" name="newpwd" placeholder="New Password" 
          pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,10}")

        span="Password must"
        li Have 8 characters and maximum 10 characters
        li Have alphabets, numbers, special characters

        div(class="form-group")
          button(type="submit" class="btn btn-primary mb-3")="Change Password"