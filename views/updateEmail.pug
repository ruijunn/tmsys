html
  head 
    title="Task Management System"
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  body(style="font-family: sans-serif; width: 55%; margin: auto") 
    div(class="container")
      h2(class="pb-2 border-bottom" style="text-align: center; padding-top: 1%; padding-bottom: 1%;")="Task Management System"
      h2(style="text-align: center;")="Update Email"
      if error
        p(class="alert alert-danger")=error
      if success
        p(class="alert alert-success")=success
        
      form(class="row g-3" method="post")          
        div(class="form-group")
          input(type="email" class="form-control" name="email" placeholder="Email"
          style="padding:12px; border-radius: 4px; margin: 5px 0; opacity: 0.85; display: inline-block; font-size: 17px; line-height: 20px;")

        div(class="form-group")
          button(type="submit" class="btn btn mb-3"
          style="background-color: #f8e5e7; color: black; font-weight: bold; width: 100%; padding: 14px 20px; margin: auto; cursor: pointer;")="Update"
          button(type="button" class="btn btn mb-3" onclick=`window.location='/'`
          style="background-color: #98fb98; color: black; font-weight: bold; width: 100%; padding: 14px 20px; margin: auto; cursor: pointer;")="Back"