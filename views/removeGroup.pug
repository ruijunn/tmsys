html
  head 
    title="Task Management System"
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(type="text/css" href="/style.css" rel="stylesheet")
  body
    include ./navbar.pug
      h2(style="text-align: left")="Remove Group"
      if error
          p(class="alert alert-danger")=error
      if success
          p(class="alert alert-success")=success
      div(class="removeGroup")
        form(class="row g-3" method="post")
            div(class="form-group")
              div(class="col-sm-8")
                label(class="form-label")="Username:"
                input(type="text" class="form-control" name="username" placeholder="username" value=`${userA}` readonly)
                input(type="hidden" name="username" value=`${userA}`)
            
            div(class="form-group")
              label(class="form-label")="Select a Group to Delete:"
              div(class="col-sm-8")
                select(class="form-select" name="selectedGrp")
                  option(value="" disabled selected)="-- Select --"
                  if deleteArray
                    each d in deleteArray 
                      option(value=`${d.groupname}`)=`${d.groupname}`
            
            div(class="form-group")
              button(type="submit" class="btn btn mb-3")="Remove"
              button(type="button" class="btn btn mb-3" onclick=`window.location='/listUsers'`)="Back"
        