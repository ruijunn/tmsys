html
  head 
    title="Task Management System"
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(type="text/css" href="style.css" rel="stylesheet")
  body
    include ./navbar.pug
      h2="New Plan"
      if error
        p(class="alert alert-danger")=error
      if success
        p(class="alert alert-success")=success

      div(class="createPlan")
        form(class="row g-3" method="post")
          div(class="form-group")
            label(class="form-label")="Application Name:"
            div(class="col-sm-8")
              select(class="form-select" name="appname")
                option(value="" disabled selected)="-- Select application --"
                if applicationArray
                  each app in applicationArray 
                    option(value=`${app.appname}`)=`${app.appname}`
          div(class="form-group")
            div(class="col-sm-8")
              label(class="form-label")="Plan MVP Name:"
              input(type="text" class="form-control" name="pname")
          div(class="form-group")
            div(class="col-sm-8")
              label(class="form-label")="Start Date:"
              input(type="date" class="form-control" name="pstartDate")
          div(class="form-group col-md-6")
            div(class="col-sm-8")
              label(class="form-label")="End Date:"
              input(type="date" class="form-control" name="pendDate")
          div(class="form-group")
            button(type="submit" class="btn btn mb-3")="Create"
            button(type="button" class="btn btn mb-3" onclick=`window.location='/planList'`)="Back"